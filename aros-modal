      <div class="aros-modal-container">
        <div class="aros-modal-content">
          <img src="https://img1.daumcdn.net/thumb/R1280x0/?scode=mtistory2&fname=https%3A%2F%2Fblog.kakaocdn.net%2Fdn%2FcfXt4Q%2FbtsGuI4L8fx%2F6ekKoOf4vlmoX1U3bY0kSk%2Fimg.jpg" alt="Modal Image">
        </div>
        <div class="aros-modal-actions">
          <a href="https://second.bookify.co.kr/26">
					<div class="aros-modal-button blue">
					예매하러 가기
					</div>
					</a>
					<a href="https://second.bookify.co.kr/25">
          <div class="aros-modal-button black" id="aros-back">
					오늘 보지않기
					</div>
					</a>
        </div>
      </div>
    </div>
  </div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const modal = document.getElementById('aros-modal');
  const closePopup = document.getElementById('close-popup');
  const goBackButton = document.getElementById('aros-back');
  
  const lastDismissed = localStorage.getItem('modalDismissedTime');
  const currentTime = new Date().getTime();

  // Check if the modal was dismissed within the last 24 hours
  if (lastDismissed && currentTime - lastDismissed < 24 * 60 * 60 * 1000) {
    return; // Don't show the modal
  }

  document.addEventListener('scroll', function() {
    const scrollPosition = window.scrollY;
    const windowHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercentage = (scrollPosition / windowHeight) * 100;

    if (scrollPercentage >= 50) {
      modal.style.display = 'flex';
    }
  });

  closePopup.addEventListener('click', function() {
    modal.style.display = 'none';
  });

  goBackButton.addEventListener('click', function() {
    modal.style.display = 'none';
    localStorage.setItem('modalDismissedTime', new Date().getTime());
  });
});
</script>
